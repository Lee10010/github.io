        }
        .copy-btn {
            padding: 8px 15px;
            background: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            flex: 1 1 40%;
        }
        .copy-btn:hover {
            background: #45a049;
        }
